                                div.col-6
                                    iframe(src="/collections/" + id + "/compared_overall_disgusted_emotion.html")
                                div.col-6
                                    iframe(src="/collections/" + id + "/compared_overall_happy_emotion.html")
                                div.col-6
                                    iframe(src="/collections/" + id + "/compared_overall_sad_emotion.html")
